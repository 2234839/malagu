{
  "extends": "./configs/base.tsconfig",
  "compilerOptions": {
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@malagu/core": [
        "packages/core/src/common"
      ],
      "@malagu/core/lib/*": [
        "packages/core/src/*"
      ]
    },
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "dev-packages/*/src",
    "packages/*/src",
    "examples/*/test"
  ]
}
